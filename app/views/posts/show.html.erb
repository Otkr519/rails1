<h3>スケジュール詳細</h3>

<table>
  <tr>
    <th>タイトル</th>
    <td><%= @post.title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @post.start_day.strftime('%Y/%m/%d')%></td>
  </tr>
  <tr>
    <th>終了日</th>
    <td><%= @post.end_day.strftime('%Y/%m/%d')%></td>
  </tr>
  <tr>
    <th>メモ</th>
    <td><%= @post.schedule %></td>
  </tr>
</table>

<div>
  <ul>
    <li><%= link_to "スケジュール情報一覧に戻る", :posts %></li>
  </ul>
</div>
<h1>スケジュール管理</h1>
<h3><%="本日の日付:#{Date.today.strftime('%Y/%m/%d')}" %></h3>
<h3><%="予定件数: #{@posts.count}件"%></h3>


<% if flash[:notice] %>
<p class="notice"><%= flash[:notice] %></p>
<% end %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日時</th>
    </tr>
  </thead>

  <tbody>
   <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.start_day.strftime('%Y/%m/%d')%></td>
        <td><%= post.end_day.strftime('%Y/%m/%d')%></td>
        <td>
        <% if post.allday == true %>
				<%= "○" %>
        <% end %>
        </td>
        <td><%= post.updated_at.to_s(:datetime_jp) %></td>
        
        <td><%= link_to "参照", post %></td>
        <td><%= link_to "編集", [:edit, post] %></td>
        <td><%= link_to "削除", post, data: { turbo_method: :delete , turbo_confirm: "本当に削除しますか？" } %></td>
      </tr>

      
    <% end %>
  </tbody>
</table>

<p><%= link_to "スケジュール登録", :new_post %></p>
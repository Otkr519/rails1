<h3>スケジュール編集</h3>

<%= render "shared/error", obj: @post %>
<%= form_with model: @post do |f| %>
  <table>
    <tr>
      <th><%= f.label :titile ,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <th><%= f.label :start_day ,"開始日" %></th>
      <td><%= f.date_field :start_day %></td>
    </tr>
    <tr>
      <th><%= f.label :end_day,"終了日" %></th>
      <td><%= f.date_field :end_day %></td>
    </tr>
    <tr>
      <th><%= f.label :schedule ,"メモ" %></th>
      <td><%= f.text_area :schedule %></td>
    </tr>
    <tr><th></th>
     <td><%= f.check_box :allday, {},checked_value = 'true' , unchecked_value = 'false' %>
    <%= f.label :allday, '終日' %></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "編集を完了する" %></li>
      <li><%= link_to "スケジュール一覧に戻る", :posts %></li>
    </ul>
  </div>
<% end %>
